{
  "manifest_version": 3,
  "name": "LinkedIn Scraper",
  "version": "1.0",
  "description": "Scrapes LinkedIn profiles and sends data to a local server.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
